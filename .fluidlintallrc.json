{
    "eslint": {
        "js": {
            "includes": ["./.eleventy.js"]
        },
        "json": {
            "excludes": ["./src/_data/*.json"]
        }
    },
    "jsonlint": {
        "excludes": ["./src/_data/*.json"]
    },
    "lintspaces": {
        "jsonindentation": {
            "excludes": ["./src/_data/*.json"]
        },
        "newlines": {
            "excludes": [
                "./src/assets/**/*.woff",
                "./src/assets/**/*.woff2",
                "./src/pages/*.md",
                "./src/sessions/*.md",
                "./src/steps/*.md",
                "./src/updates/*.md"
            ]
        }
    },
    "markdownlint": {
        "excludes": [
            "./src/pages/*.md",
            "./src/sessions/*.md",
            "./src/steps/*.md",
            "./src/updates/*.md",
            "./CHANGELOG.md"
        ]
    }
}
