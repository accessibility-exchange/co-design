<!doctype html>
<html lang="en-ca" dir="ltr">
    <head>
        <title>{% if title %} {{ title }} {% else %} {{ site.title }} {% endif %}</title>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <link rel="manifest" href="/manifest.webmanifest">
        {% include "partials/global/icons.njk" %}
        {# <script type="text/javascript" src="{{ '/' | url }}lib/infusion/infusion-uio.min.js"></script> #}
        {% include "partials/global/scripts.njk" %}
        {% include "partials/global/stylesheets.njk" %}
    </head>
    <body class="{{ bodyClass if bodyClass else "page" }}">
        <a id="skip-to-content" href="#main">Skip to content</a>
        {# {% uioTemplate %} #}
        {% include "partials/global/header.njk" %}
        <main id="main">
            <div class="wrapper flow">
                <article class="flow">
                    {% block pageHeader %}
                    <header class="flow">
                        {% if page.url !== "/" -%}
                        <p class="breadcrumb"><a href="/" rel="home">Home</a> / {{ title }}</p>
                        {%- endif %}
                        <h1>{{ title }}</h1>
                    </header>
                    {% endblock %}
                    <nav class="flc-toc-tocContainer"></nav>
                    {% block content %}
                    <div class="content flow">
                    {{ content | safe }}
                    </div>
                    {% endblock %}
                </article>
            </div>
        </main>
        {% include "partials/global/footer.njk" %}
        {% uioInit %}
        {% block footerScripts %}
        {% endBlock %}
    </body>
</html>
