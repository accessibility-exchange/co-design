{% extends "layouts/base.njk" %}

{% set bodyClass = "posts" %}

{% block pageHeader %}
<header class="flow">
    <h1>{{ title }}</h1>
</header>
{% endblock %}

{% block content %}
{% if posts.length %}
    <div class="flow">
    {% for item in posts %}
        <article class="entry">
            <h2><a href="{{ item.url }}">{{ item.data.title }}</a></h2>
            <p class="metadata">By <span class="author">{{ author if author else "the Inclusive Design Research Centre" }}</span> â€“ <time datetime="{{ item.data.date | isoDate }}" class="dt-published">{{ item.data.date | formatDate }}</time></p>
            {% if item.data.excerpt %}
            <p>{{ item.data.excerpt | safe }}</p>
            {% endif %}
        </article>
    {% endfor %}
    </div>
    {% if pagination.pages.length > 1 %}
    {% include "partials/components/pagination.njk" %}
    {% endif %}
{% endif %}
{% endblock %}
