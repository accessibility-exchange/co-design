{% extends "layouts/base.njk" %}

{% set bodyClass = "sessions" %}

{% block content %}
{% if sessions.length %}
    <div class="flow">
    {% for item in sessions %}
        <article class="entry">
            <h2><a href="{{ item.url }}">{{ item.data.title }}</a></h2>
            <p class="metadata"><time datetime="{{ item.data.start | isoDate }}" class="dt-start">{{ item.data.start | formatDate }}</time></p>
            {% if item.data.description %}
            <p>{{ item.data.description | safe }}</p>
            {% endif %}
        </article>
    {% endfor %}
    </div>
    {% if pagination.pages.length > 1 %}
    {% include "partials/components/pagination.njk" %}
    {% endif %}
{% endif %}
{% endblock %}
