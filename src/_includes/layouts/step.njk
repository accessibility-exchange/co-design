{% extends "layouts/base.njk" %}

{% set bodyClass = "page page--step" %}

{% block content %}
<div class="content flow">
    {% set previousStep = collections.steps | getPreviousCollectionItem(page) %}
    {% if previousStep.url === false %}
    {% set previousStep = collections.steps | getPreviousCollectionItem(previousStep) %}
    {% endif %}    {% set nextStep = collections.steps | getNextCollectionItem(page) %}
    {% if nextStep.url === false %}
    {% set nextStep = collections.steps | getNextCollectionItem(nextStep) %}
    {% endif %}
    {{ content | safe }}
    {% if previousStep %}<p>Previous step: <a href="{{ previousStep.url }}">{{ previousStep.data.title }}</a></p>{% endif %}
    {% if nextStep %}<p>Next step: <a href="{{ nextStep.url }}">{{ nextStep.data.title }}</a></p>{% endif %}
</div>
{% endblock %}
